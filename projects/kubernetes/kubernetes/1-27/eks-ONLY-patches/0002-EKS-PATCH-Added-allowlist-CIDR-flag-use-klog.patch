+			proxyCidrAllowlist:        "",
+			ip:                        "127.0.0.1",
+			expectNodeProxyAllowed:    false,
+			expectPodProxyAllowed:     false,
+			expectServiceProxyAllowed: false,
+		},
+		{
+			name:                      "allowlist contains localhost, localhost blocked",
+			proxyCidrAllowlist:        "127.0.0.1/32",
+			ip:                        "127.0.0.1",
+			expectNodeProxyAllowed:    false,
+			expectPodProxyAllowed:     false,
+			expectServiceProxyAllowed: false,
